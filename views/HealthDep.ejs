<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Health Department</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.2/css/bulma.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <script defer src="https://use.fontawesome.com/releases/v5.0.0/js/all.js"></script>
</head>

<body>

  <section class="hero is-dark">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
        Health Department
      </h1>
      </div>
    </div>
  </section>
  <form id="healthForm">
    <div class="columns">
      <div class="column">
        <div class="control input-spacing">
          <label for="insuredName">Deceased Name</label>
          <input class="input is-medium" id="insuredName" value="<%=doc.hospital[0].insured_name%>" type="text" placeholder="name" disabled>
        </div>
        <div class="control input-spacing">
          <label for="cause">Cause of Death</label>
          <input class="input is-medium" id="cause" value="<%=doc.hospital[0].cause%>" type="text" disabled>
        </div>
        <div class="control input-spacing">
          <label for="adress2">Address line2</label>
          <input class="input is-medium" id="adress2" value="<%=doc.hospital[0].adress2%>" type="text" disabled>
        </div>
      </div>
      <div class="column">
        <div class="control input-spacing">
          <label for="ssn">DOB</label>
          <input class="input is-medium" id="dob" value="<%=doc.hospital[0].birth_date%>" type="text" disabled>
        </div>
        <div class="control input-spacing">
          <label for="deathdate">Death Date</label>
          <input class="input is-medium" id="deathdate" value="<%=doc.hospital[0].death_date%>" type="text" disabled>
        </div>
        <div class="control input-spacing">
          <label for="state">State</label>
          <input class="input is-medium" id="state" value="<%=doc.hospital[0].state%>" type="text" disabled>
        </div>
      </div>
      <div class="column">
        <div class="control input-spacing">
          <label for="Gender">Gender </label>
          <input class="input is-medium" id="Gender" value="<%=doc.hospital[0].gender%>" type="text" disabled>
        </div>
        <div class="control input-spacing">
          <label for="deathtime">Death Time</label>
          <input class="input is-medium" id="deathtime" value="<%=doc.hospital[0].death_time%>" type="text" disabled>
        </div>
        <div class="control input-spacing">
          <label for="zipcode">Zip Code</label>
          <input class="input is-medium" id="zipcode" value="<%=doc.hospital[0].zipcode%>" type="text" disabled>
        </div>
      </div>
      <div class="column">
        <div class="control input-spacing">
          <label for="ssn">SSN</label>
          <input class="input is-medium" id="ssn" value="<%=doc.hospital[0].ssn%>" name="ssn" type="text" disabled>
        </div>
        <div class="control input-spacing">
          <label for="adress1">Address line1</label>
          <input class="input is-medium" id="adress1" value="<%=doc.hospital[0].adress_1%>" type="text" disabled>
        </div>
        <div class="control input-spacing">
          <label for="confirmation">Issue Death Certificate</label>
          <input class="input is-medium" id="confirmation" name="confirmation"  type="text" placeholder="Yes/No" >
        </div>
      </div>
    </div>
    <div class='card-content is-flex is-horizontal-center'>
      <button class="button is-black is-medium">Submit</button>
      <a class="button is-black is-medium" href="/ssn4" style="margin-left:40px">Next</a>


    </div>
  </form>



</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<script>
$("#healthForm").submit(function(e) {
  var serializeData = $("#healthForm").serialize();
      $.ajax({
         type: "POST",
         url: '/healthtransaction',
         data: serializeData, // serializes the form's elements.
         success: function(data)
         {
           if(data === 'yes' || data ==='Yes' || data === 'YES'){
             alert('Home Department Accepted !')
           }
         }
       });

  e.preventDefault();
});
</script>

</html>
